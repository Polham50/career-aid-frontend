{
  "compilerOptions": {
    "target": "ES2020",
  "module": "es2020",
    "rootDir": "./",
    "outDir": "./dist-server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
  "types": ["node", "react", "react-dom"],
  // Removed typeRoots to allow default JSX type resolution
  },
  "include": ["**/*.ts", "**/*.tsx", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}